<?xml version="1.0"?>
<phpunit  bootstrap="src/test/resources/bootstrap.php">
    <testsuites>
		<testsuite name="PHP_CodeSniffer_BestOfMedia_AllTests">
			<directory suffix="Test.php">src/test/php</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src/main/php</directory>
        </whitelist>
    </filter>
</phpunit>